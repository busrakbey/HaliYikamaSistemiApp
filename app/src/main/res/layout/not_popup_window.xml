<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5BCCCCCC"
        android:orientation="vertical"
        android:padding="10dp">
        <!-- Title layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <!-- <ImageView
                android:src="@mipmap/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" /> -->
            <TextView
                android:id="@+id/call_tittle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center"
                android:textColor="@color/text"
                android:textSize="23sp"
                android:textStyle="bold"
                tools:text="Notlar" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/gorev_not"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/beyaz"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/call_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Not giriniz.."
                android:textColor="@color/text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gorev_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/beyaz"
            android:orientation="vertical"
            android:visibility="gone">

            <Spinner
                android:id="@+id/gorev_tamamla_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/not_vazgec_button"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_weight="0.5"
                android:background="@drawable/login_shape_bk"
                android:text="Vazgeç"
                android:textAllCaps="false"
                android:textColor="@color/beyaz"
                android:textSize="@dimen/mr_dialog_title_text"
                android:visibility="visible" />


            <Button
                android:id="@+id/not_kaydet_button"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="50dp"
                android:layout_weight="0.5"
                android:background="@drawable/login_shape_bk"
                android:text="İlerle"
                android:textAllCaps="false"
                android:textColor="@color/beyaz"
                android:textSize="@dimen/mr_dialog_title_text"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>